---
interface Props {
  title: string;
  description: string;
  subddescription: string;
  image: string;
  alt: string;
}
const { title, description, image, alt, subddescription } = Astro.props;
---

<div class="mt-20">
  <div class="rounded-xl p-5 flex flex-col items-center">
    <img
      class="w-[210px] h-[70px] rounded-xl object-cover"
      src={image}
      alt={alt}
    />
    <h3 class="text-white text-2xl mt-5">{title}</h3>
    <p class="text-white mt-5 text-center text-base w-[400px]">
      {description}
    </p>
    <p class="text-white text-center text-xs font-extralight w-[400px]">
      {subddescription}
    </p>
  </div>
</div>
